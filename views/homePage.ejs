<%- include("partials/homePageHeader.ejs") %>

<div class="box-container" id="HOME">
  <div class="video-container">
    <video
      id="video"
      src="/resources/videos/virus.mp4"
      loop
      muted
      autoplay
    ></video>
  </div>
  <div class="content">
    <h1>COVID'19 Live Tracker</h1>
    <p>A Covid'19 stats tracker for displaying live updates.</p>
    <form action="/homePage" method="POST">
      <div class="form-inputs-container">
        <input
          value="India"
          type="text"
          class="search"
          name="search"
          autocomplete="off"
          id="input-field"
          placeholder="Search for country"
        />
        <input type="submit" value="Find" class="form-btn" />
      </div>
      <!-- countries List -->
      <p class="select-text">Or select a country</p>
      <div
        w3-include-html="/resources/country-names/countriesList.html"
        class="select-container"
      ></div>
    </form>
  </div>
</div>

<div class="home-content">
  <div class="home-page-box">
    <h2>Confirmed</h2>
    <p> <%= globalTotal %>  </p>
  </div>
  <div class="home-page-box">
    <h2>Recovered</h2>
    <p> <%= globalRecovered %>  </p>
  </div>
  <div class="home-page-box">
    <h2>Active</h2>
    <p> <%= globalActive %>  </p>
  </div>
  <div class="home-page-box">
    <h2>Total Cases in India</h2>
    <p> <%= indiaTotal %>  </p>
  </div>
</div>

