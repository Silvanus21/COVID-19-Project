<%- include("partials/homePageHeader.ejs") %>

<div class="box-container" id="HOME">
  <div class="video-container">
    <video id="video" src="/resources/videos/virus.mp4" loop muted autoplay></video>
  </div>
  <div class="content">
    <h1>COVID'19 Live Tracker</h1>
    <p>A Covid'19 stats tracker for displaying live updates.</p>
    <form action="/" method="POST">
      <div class="form-inputs-container">
        <input value="India" type="text" class="search" name="search" autocomplete="off" id="input-field"
          placeholder="Search for country" />
        <input type="submit" value="Find" class="form-btn" />
      </div>
      <!-- countries List -->
      <p class="select-text">Or select a country</p>
      <div w3-include-html="/resources/country-names/countriesList.html" class="select-container"></div>
    </form>
  </div>
</div>

<div class="home-content">
  <div class="home-box">
    <div class="bg1 block-1 home-box-content">
      <h1>Global</h1>
      <div class="info">
        <h1><%= globalTotal %>  | <span><%= globalRecovered %> </span></h1>
        <p>Coronavirus Cases &nbsp;<span>| &nbsp;Recovered</span></p>
      </div>
    </div>
    <div class="bg1 block-2 home-box-content">
      <div class="info">
        <h1><%= globalDeaths %> </h1>
        <p>Total Deaths</p>
      </div>
    </div>
    <a href="/countriesOverview" class="bg1 block-3 home-box-content">
      <div class="info">
        <h1>
          <i class="fas fa-table"></i>
          <i class="fas fa-chart-line"></i>
        </h1>
        <p>Countries Overview</p>
      </div>
    </a>
  </div>
</div>

